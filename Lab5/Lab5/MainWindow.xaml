<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="300" MinWidth="500">

    <Grid>
        <TabControl Name="MainTabControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="Клієнти">
                <Grid>
                    <DataGrid Name="ClientsDataGrid" AutoGenerateColumns="True"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              Margin="5"/>
                </Grid>
            </TabItem>
            <TabItem Header="Компанії">
                <Grid>
                    <DataGrid Name="CompaniesDataGrid" AutoGenerateColumns="True"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              Margin="5"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
