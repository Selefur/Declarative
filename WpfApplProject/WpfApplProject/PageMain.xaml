<Page x:Class="FortuneTeller.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FortuneTeller"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Головна">
    <Grid Background="Transparent">
        <!-- Use parent background -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="28" FontWeight="Bold" Foreground="#FFDCD8C5" Margin="0,0,0,30" TextAlignment="Center">
                Вітаємо у Ворожки!
            </TextBlock>

            <TextBlock FontSize="18" Margin="0,15" TextAlignment="Center">
                <Hyperlink NavigateUri="PageFortuneTeller.xaml" RequestNavigate="Hyperlink_RequestNavigate" Foreground="LightGoldenrodYellow">
                    🔮 Отримати Передбачення
                </Hyperlink>
            </TextBlock>

            <TextBlock FontSize="18" Margin="0,15" TextAlignment="Center">
                <Hyperlink NavigateUri="PageClients.xaml" RequestNavigate="Hyperlink_RequestNavigate" Foreground="LightGoldenrodYellow">
                    📜 Переглянути Історію
                </Hyperlink>
            </TextBlock>

            <TextBlock FontSize="14" Margin="0,40,0,10" TextAlignment="Center" Foreground="Gray">
                Оберіть дію.
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>